{
  "name": "HackerFeed",
  "short_name": "HackerFeed",
  "version": "0.3.2",
  "manifest_version": 2,
  "icons": {
    "256": "icons/icon_256.png",
    "128": "icons/icon_128.png",
    "64": "icons/icon_64.png"
  },
  "minimum_chrome_version": "33",
  
  "browser_action": {
    "default_icon": "assets/flame.png",
    "default_popup": "popup.html",
    "default_title": "HackerFeed recent top feeds"
  },

  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },

  "permissions": [
    "storage",
    "identity",
    "https://github.com/",
    "https://hacker-news.firebaseio.com/",
    "http://www.reddit.com/"
  ]
}